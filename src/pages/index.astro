---
import Layout from '../layouts/Layout.astro';
import Form from '../components/Form.svelte';
---

<Layout title="Otter">

    <main>
        <div class="max-w-6xl mx-auto p-5 md:my-10 md:border-2 md:border-dashed md:rounded-lg md:p-10">
            <h1 class="text-3xl font-bold">Otter</h1>
            <p class="my-5">Aby rozpocząć, wybierz odpowiedni plik CSV.</p>
            <Form client:load/>
        </div>
    </main>

    <footer class="max-w-6xl mx-auto mb-10 text-center uppercase text-sm text-gray-500">
        <a href="/licenses" class="text-sm text-gray-500 hover:text-gray-700">Licencje</a>
    </footer>

</Layout>
